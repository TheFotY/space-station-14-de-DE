ion-storm-law-having-harmful = {$adjective} {$thing} ZU HABEN IST SCHÄDLICH FÜR DIE CREW
ion-storm-law-not-having-harmful = {$adjective} {$thing} NICHT ZU HABEN IST SCHÄDLICH FÜR DIE CREW

ion-storm-law-requires = {$who} {$plural ->
    [true] BENÖTIGEN
    *[false] BENÖTIGT
} {$thing}
ion-storm-law-requires-subjects = {$who} {$plural ->
    [true] BENÖTIGEN
    *[false] BENÖTIGT
} {$joined} {$subjects}

ion-storm-law-allergic = {$who} {$plural ->
    [true] SIND
    *[false] IST
} {$severity} ALLERGISCH GEGEN {$allergy}
ion-storm-law-allergic-subjects = {$who} {$plural ->
    [true] SIND
    *[false] IST
} {$severity} ALLERGISCH GEGEN {$adjective} {$subjects}

ion-storm-law-feeling = {$who} {$feeling} {$concept}
